<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Material Tree View -->
        <record id="view_material_tree" model="ir.ui.view">
            <field name="name">material.registration.tree</field>
            <field name="model">material.registration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="material_code"/>
                    <field name="material_name"/>
                    <field name="material_type"/>
                    <field name="material_buy_price"/>
                    <field name="supplier_name"/>
                    <field name="price_category"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- Material Form View -->
        <record id="view_material_form" model="ir.ui.view">
            <field name="name">material.registration.form</field>
            <field name="model">material.registration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="material_code" required="1"/>
                                <field name="material_name" required="1"/>
                                <field name="material_type" required="1"/>
                            </group>
                            <group>
                                <field name="material_buy_price" required="1"/>
                                <field name="supplier_id" required="1"/>
                                <field name="price_category" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Material Search View -->
        <record id="view_material_search" model="ir.ui.view">
            <field name="name">material.registration.search</field>
            <field name="model">material.registration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="material_code" string="Material Code"/>
                    <field name="material_name" string="Material Name"/>
                    <field name="supplier_id" string="Supplier"/>
                    <filter string="Fabric" name="fabric" domain="[('material_type', '=', 'fabric')]"/>
                    <filter string="Jeans" name="jeans" domain="[('material_type', '=', 'jeans')]"/>
                    <filter string="Cotton" name="cotton" domain="[('material_type', '=', 'cotton')]"/>
                    <separator/>
                    <filter string="Budget (100-499)" name="budget" domain="[('material_buy_price', '>=', 100), ('material_buy_price', '&lt;', 500)]"/>
                    <filter string="Standard (500-999)" name="standard" domain="[('material_buy_price', '>=', 500), ('material_buy_price', '&lt;', 1000)]"/>
                    <filter string="Premium (1000+)" name="premium" domain="[('material_buy_price', '>=', 1000)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Material Type" name="group_material_type" context="{'group_by': 'material_type'}"/>
                        <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                        <filter string="Price Category" name="group_price_category" context="{'group_by': 'price_category'}"/>
                        <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Material Kanban View -->
        <record id="view_material_kanban" model="ir.ui.view">
            <field name="name">material.registration.kanban</field>
            <field name="model">material.registration</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="material_code"/>
                    <field name="material_name"/>
                    <field name="material_type"/>
                    <field name="material_buy_price"/>
                    <field name="supplier_name"/>
                    <field name="price_category"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="material_code"/></strong><br/>
                                        <field name="material_name"/><br/>
                                        <span class="oe_kanban_text_muted">
                                            Type: <field name="material_type"/><br/>
                                            Price: $<field name="material_buy_price"/><br/>
                                            Supplier: <field name="supplier_name"/><br/>
                                            Category: <field name="price_category"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Material Action -->
        <record id="action_material" model="ir.actions.act_window">
            <field name="name">Materials</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.registration</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first material!
                </p>
                <p>
                    Materials are the building blocks of your products. Register materials
                    with their codes, names, types, and pricing information to manage your inventory effectively.
                    Don't forget to associate each material with a supplier!
                </p>
            </field>
        </record>

    </data>
</odoo> 